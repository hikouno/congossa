	<ion-list *ngFor="let f of profile.formations; let i = index" no-lines>

    <button ion-item block color="white" (click)="showCategories_formation()">{{categorie_formation}}</button>
    <ion-item>
        <ion-label>Durée de la formation</ion-label>
        <ion-multi-picker item-content [multiPickerColumns]="durations"></ion-multi-picker>
    </ion-item>

		<ion-buttons end>
			<button ion-button color="danger" round small (click)=removeFormation(i)>
				Effacer
			</button>
		</ion-buttons>

	</ion-list>


	<div class="text-description">
		<span class="text-title">Expérience</span>
	</div>

	<div style="text-align:center;">
		<button ion-button class="addButton" clear color="primary" block (click)="addExperience()">
			<span style="color:#488aff;"><ion-icon name="add"></ion-icon> Ajouter une Expérience</span>
		</button>
	</div>

	<ion-list *ngFor="let e of profile.experiences; let i = index" no-lines>



		<ion-item>
			<ion-input type="text" placeholder="Titre de l'expérience" [(ngModel)]="profile.experiences[i].experience"></ion-input>
		</ion-item>

    <button ion-item block color="white" (click)="showCategories_experience()">{{categorie_experience}}</button>

		<ion-item>
			<ion-label>Date de début</ion-label>
			<ion-datetime [(ngModel)]="profile.experiences[i].dateDebut" displayFormat="MM/YYYY" placeholder="Date"></ion-datetime>
		</ion-item>

		<ion-item>
			<ion-label>Date de fin</ion-label>
			<ion-datetime [(ngModel)]="profile.experiences[i].dateFin" displayFormat="MM/YYYY" placeholder="Date"></ion-datetime>
		</ion-item>

		<ion-buttons end>
